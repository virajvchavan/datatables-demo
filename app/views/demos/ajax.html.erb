<div class="card" style="margin: 40px;">
  <div class="card-section">
    <table id="table_id" class="display">
      <thead>
          <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Office</th>
              <th>Start Date</th>
              <th>Salary</th>
          </tr>
      </thead>
    </table>

  </div>
</div>
<script type="text/javascript">
  $(document).ready( function () {
    $('#table_id').DataTable({
        ajax: {
          type: "GET",
          url: '/users',
          dataType: 'json'
        },
        columns: [
            { data: 'name' },
            { data: 'position.name' },
            { data: 'office' },
            { data: 'start_date.display' },
            { data: 'salary' }
        ]
    });
} );
</script>
